<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="375sp"
                                             android:layout_height="375sp"
                                             android:background="@drawable/popup_background"
                                             android:orientation="vertical"
                                             android:layout_gravity="center_horizontal">

    <TextView android:layout_width="217dp"
              android:layout_height="wrap_content"
              android:text="@string/game_paused"
              android:fontFamily="@font/fuente1"
              android:textSize="47sp"
              android:textAllCaps="false"
              android:textStyle="bold"
              android:layout_marginEnd="8dp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintBottom_toBottomOf="parent"
              app:layout_constraintVertical_bias="0.172"
              android:id="@+id/textView" app:layout_constraintHorizontal_bias="0.422" android:textAlignment="center"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  app:layout_constraintTop_toBottomOf="@+id/textView"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"
                  android:layout_marginBottom="8dp"
                  app:layout_constraintBottom_toBottomOf="parent"
                  app:layout_constraintHorizontal_bias="0.499"
                  app:layout_constraintVertical_bias="0.0">
        <Button android:id="@+id/repren_button"
                android:textAllCaps="false"
                android:text="@string/resume"
                android:textSize="37sp"
                android:fontFamily="@font/fuente1"
                android:textStyle="bold"
                android:background="@drawable/button_circle"
                android:layout_width="175dp"
                android:layout_height="65dp"/>
        <Button android:id="@+id/opcions_button"
                android:textAllCaps="false"
                android:text="@string/options"
                android:textSize="37sp"
                android:fontFamily="@font/fuente1"
                android:textStyle="bold"
                android:height="70dp"
                android:width="150dp"
                android:background="@drawable/button_circle"
                android:layout_width="175dp"
                android:layout_height="65dp"/>
        <Button android:id="@+id/menu_button"
                android:textAllCaps="false"
                android:text="@string/menu"
                android:textSize="37sp"
                android:fontFamily="@font/fuente1"
                android:textStyle="bold"
                android:height="70dp"
                android:width="150dp"
                android:background="@drawable/button_circle"
                android:layout_width="175dp"
                android:layout_height="65dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>